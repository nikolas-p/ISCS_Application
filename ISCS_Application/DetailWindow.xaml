<Window x:Class="ISCS_Application.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISCS_Application"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Topmost="True"
        Title="{Binding WindowTitle}" 
        Height="800" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок (Grid.Row="0") -->
        <TextBlock x:Name="TitleTextBlock" 
                   Grid.Row="0"
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Фото (Grid.Row="1") -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Border BorderBrush="Gray" BorderThickness="1" Width="300" Height="200">
                <Image x:Name="EquipmentImage" Width="300" Height="200" Stretch="UniformToFill"/>
            </Border>
            <Button x:Name="ChangePhotoButton" 
                    Content="Загрузить фото" 
                    Width="300" Margin="0,10"
                    Click="ChangePhotoButton_Click"/>
        </StackPanel>

        <!-- Поля формы (Grid.Row="2") -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" >
            <StackPanel Margin="0,20">
                <!-- Наименование -->
                <TextBlock Text="Наименование" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" TextChanged="RequiredField_TextChanged" Margin="0,0,0,10"/>

                <!-- Инвентарный номер -->
                <TextBlock Text="Инвентарный номер" Margin="0,0,0,5"/>
                <TextBox x:Name="InventarNumberTextBox" 
         Margin="0,0,0,10"
         TextChanged="RequiredField_TextChanged"/>



                <!-- Описание -->
                <TextBlock Text="Описание" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                <!-- Подразделение -->
                <TextBlock Text="Подразделение" Margin="0,0,0,5"/>
                <ComboBox x:Name="DepartmentComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectionChanged="DepartmentComboBox_SelectionChanged"
                          Margin="0,0,0,10"/>

                <!-- Кабинет -->
                <TextBlock Text="Кабинет" Margin="0,0,0,5"/>
                <ComboBox x:Name="PlaceComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0,0,0,10"/>

                <!-- Вес -->
                <TextBlock Text="Вес (кг)" Margin="0,0,0,5"/>
                <TextBox x:Name="WeightTextBox" 
                         PreviewTextInput="NumberValidationTextBox"
                         TextChanged="PositiveNumber_TextChanged"
                         Margin="0,0,0,5"/>
                <TextBlock x:Name="WeightErrorText" 
                           Text="Вес не может быть отрицательным"
                           Foreground="Red" FontSize="11"
                           Visibility="Collapsed"/>

                <!-- Срок службы -->
                <TextBlock Text="Нормативный срок службы (лет)" Margin="0,10,0,5"/>
                <TextBox x:Name="ServiceLifeTextBox" 
                         PreviewTextInput="NumberValidationTextBox"
                         TextChanged="PositiveNumber_TextChanged"
                         Margin="0,0,0,5"/>
                <TextBlock x:Name="ServiceLifeErrorText" 
                           Text="Срок службы не может быть отрицательным"
                           Foreground="Red" FontSize="11"
                           Visibility="Collapsed"
                           Margin="0,0,0,10"/>

                <!-- Дата постановки (только чтение) -->
                <TextBlock Text="Дата постановки на баланс" Margin="0,0,0,5"/>
                <DatePicker x:Name="RegistrationDatePicker" IsEnabled="False" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Сообщение об ошибке (Grid.Row="3") -->
        <TextBlock x:Name="InfoMessageTextBlock" 
                   Grid.Row="3"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   TextWrapping="Wrap"/>

        <!-- Кнопки (Grid.Row="4") -->
        <Grid Grid.Row="4" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="SaveButton" Content="Сохранить" 
                    Height="35" Margin="5" Background="LightGreen"
                    Click="SaveButton_Click"/>

            <Button Grid.Column="1" x:Name="DeleteButton" Content="Удалить" 
                    Height="35" Margin="5" Background="LightCoral"
                    Click="DeleteButton_Click"/>

            <Button Grid.Column="2" x:Name="BackButton" Content="Назад" 
                    Height="35" Margin="5" Click="BackButton_Click"/>
        </Grid>
    </Grid>
</Window>
