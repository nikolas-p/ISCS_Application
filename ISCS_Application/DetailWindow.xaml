<Window x:Class="ISCS_Application.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISCS_Application"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Topmost="True"
        Title="Сведения об оборудовании" Height="500" Width="400">

    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="IdTextBlock" FontSize="24" FontWeight="Bold" Margin="10"/>
                <TextBlock x:Name="MessageTextBlock" Text="открылся элемент с id" FontSize="18" Margin="10"/>

                <!-- Дополнительная информация об оборудовании -->
                <StackPanel Margin="10" Visibility="Collapsed" x:Name="EquipmentInfoPanel">
                    <TextBlock x:Name="InventarNumberText" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="NameText" FontSize="16" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="DescriptionText" FontSize="12" Margin="0,5" TextWrapping="Wrap"/>
                    <TextBlock x:Name="WeightText" FontSize="14" Margin="0,5"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10">
                    <Image x:Name="EquipmentImage" 
                           Width="150" 
                           Height="150" 
                           Stretch="UniformToFill"
                           Source="/Resources/Images/stub.jpg"/>
                </Border>

                <Button x:Name="ChangePhotoButton" 
                        Content="Заменить фото" 
                        Margin="10,5" 
                        Padding="10,5"
                        Click="ChangePhotoButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Кнопка "Сохранить изменения" -->
        <Button x:Name="SaveButton" 
                Content="Сохранить изменения" 
                Style="{DynamicResource AdditionalOrangeButtonWithRoundTop}" 
                Height="30" 
                Background="{DynamicResource ActsentGreenBrush}"
                Click="SaveButton_Click"/>

        <!-- Кнопка "Назад" -->
        <Button x:Name="BackButton" 
                Content="Назад" 
                Height="30" 
                Margin="0,5"
                Click="BackButton_Click"/>
    </StackPanel>
</Window>