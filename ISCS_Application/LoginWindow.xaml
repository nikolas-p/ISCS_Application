<Window x:Class="ISCS_Application.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISCS_Application"
        mc:Ignorable="d"
        
        Title="Вход в систему" Height="500" Width="350" Icon="/icon.ico">
    <StackPanel Margin="20">
        <Image Source="/Resources/Images/logo.png" Width="200" Height="auto"/>
        <TextBlock Text="Логин"/>
        <TextBox x:Name="LoginBox"/>

        <TextBlock Text="Пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox"/>

        <Button Content="Войти"
                Margin="0,15,0,0"
                Click="Login_Click"/>

        <Button Content="Войти как гость"
                Margin="0,50,0,0"
                Click="Guest_Click"/>
    </StackPanel>
</Window>
