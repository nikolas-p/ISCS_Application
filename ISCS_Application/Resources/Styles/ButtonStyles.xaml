<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="AdditionalOrangeButtonFULL">
        <Setter Property="FontFamily" Value="{DynamicResource BaseFont}"/>
          <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{DynamicResource AdditionalOrangeBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource BaseWhiteBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AdditionalOrangeBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Button" x:Key="AdditionalOrangeButtonWithRoundBottom" BasedOn="{StaticResource AdditionalOrangeButtonFULL}">
    <Style.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="0 0 20 20" />
        </Style>
    </Style.Resources>
    </Style>

    <Style TargetType="Button" x:Key="AdditionalOrangeButtonWithRoundTop" BasedOn="{StaticResource AdditionalOrangeButtonFULL}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="20 20 0 0" />
            </Style>
        </Style.Resources>
    </Style>


</ResourceDictionary>